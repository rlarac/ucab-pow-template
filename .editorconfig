# https://github.com/editorconfig/editorconfig/wiki/EditorConfig-Properties.
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
tab_width = 4
max_line_length = 120
insert_final_newline = true
trim_trailing_whitespace = true
quote_type = single

[*.{html,css,scss,less}]
indent_size = 2
tab_width = 2
trim_trailing_whitespace = false
quote_type = double
